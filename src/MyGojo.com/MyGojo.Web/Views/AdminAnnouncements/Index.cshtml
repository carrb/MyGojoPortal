@model IEnumerable<MyGojo.Data.Model.Announcement>

@{
    ViewBag.Title = "Administration - Announcements";
}

<div class="container-fluid">
    <div class="span3">
        <div class="well sidebar-nav">
            <p>Just some filler text for this column</p>
            <p class="normal">Diagnostic: <strong>@ViewBag.Message</strong></p>
        </div>
    </div>
    
    <div class="span9">
        <article>
		    <p>@Html.ActionLink("Create New", "Create")</p>
		    <table class="table table-striped table-bordered table-condensed">
			    <tr>
			    	<th>
			    	</th>
			    	<th>
			    		Title
			    	</th>
                    <th>
                        Content
                    </th>
                    <th>
			    		Priority
			    	</th>
			    	<th>
			    		IsVisible
			    	</th>
			    	<th>
			    		IsEditable
			    	</th>
			    </tr>
			@foreach (var item in Model) {
				<tr>
					<td>
						@Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
						@Html.ActionLink("Details", "Details", new { id=item.Id }) |
						@Html.ActionLink("Delete", "Delete", new { id=item.Id })
					</td>
					<td>
						@item.Title
					</td>
					<td>
						@item.Content
					</td>
					<td>
						@item.Content
					</td>
					
                    <td>
                        @item.Priority
                    </td>
					<td>
						@item.IsVisible
					</td>
					<td>
						@item.IsEditable
					</td>
                    
                    
                    @*  Reminder of how to do empty fields...
					<td>
						@(item.Comments == null ? "None" : item.Comments.Count.ToString())
					</td>
					<td>
						@(item.Tags == null ? "None" : item.Tags.Count.ToString())
					</td>
                    
                    And formatting
                    <td>
						@String.Format("{0:g}", item.CreatedAt)
					</td>
                    <td>
                        @String.Format("{0:g}", item.ModifiedAt)
                    </td>
                    *@
				</tr>
			}
		    </table>
	    </article>

          
        

    </div>   
</div><!--/.fluid-container-->
